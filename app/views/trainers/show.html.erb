<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<table>
	<tr>
		<th>Pokemon</th>
		<th>Level</th>
		<th>Health</th>
	</tr>
		<% @pokemons.each do |p| %>
			<tr>

				<td><%= p.name %></td>
				<td><%= p.level %></td>
				<td><%= p.health %></td>
				<td><%= button_to "Damage!", damage_path(id: p), :class => "button small", :method => :patch %></td>
			</tr>
		<% end %>

</table>
<% if current_trainer.id == @trainer.id %>
  <%= button_to "Create a new Pokemon!", new_pokemon_path(id: p), :class => "button small", :method => :get %>
<% end %>
